<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#587280"
    tools:context=".klasifikasimh.TahapanKlasifikasi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout

                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/white"
                    android:text="TATA CARA PEMBERIAN NAMA ILMIAH"
                    android:background="@drawable/bg_merah"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:id="@+id/menubar"
                        android:layout_marginRight="0dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_baseline_menu_24"
                        android:onClick="showPopup" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#C9FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Tata cara penamaan ilmiah dalam sistem klasifikasi makhluk hidup menggunakan sistem binomial nomenklatur yang berarti metode penamaan ilmiah yang menggunakan kaidah tata nama ganda pada makhluk hidup. Tata cara pemberian nama ilmiah pada klasifikasi makhluk hidup antara lain:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/aileron"
                    android:justificationMode="inter_word"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"/>
                    <TextView
                        android:padding="2dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"
                        android:text="Setiap makhluk hidup memiliki dua kata latin dimana kata pertama menggambarkan Genus dan kata kedua menggambarkan Spesies."/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"/>
                    <TextView
                        android:padding="2dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"
                        android:text="Kata pertama menunjukan genus dan penulisannya diawali huruf besar dan kata kedua menunjukan spesies dan penulisannya diawali huruf kecil."/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"/>
                    <TextView
                        android:padding="2dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:textSize="16sp"
                        android:fontFamily="@font/aileron"
                        android:text="Penulisan nama makhluk hidup dilakukan dengan huruf miring atau diberi garis bahwah, misalnya Oryza sativa atau Oryza sativa (Padi)."/>
                </TableRow>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>