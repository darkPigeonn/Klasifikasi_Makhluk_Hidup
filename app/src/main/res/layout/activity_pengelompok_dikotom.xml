<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#587280"
    tools:context=".klasifikasimh.PengelompokDikotom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="PENGELOMPOKAN MAKHLUK HIDUP SECARA DIKOTOM"
                android:background="@drawable/bg_merah"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_kayukuning"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="366dp"
                    android:layout_height="match_parent"
                    android:text="@string/title_klasifikasi_tumbuhan"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#C9FFFFFF">
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_tumbuhan_1"
                        android:textSize="19sp"/>
                    </TableRow>
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_tumbuhan_2"
                        android:textSize="19sp"/>
                    </TableRow>
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_tumbuhan_3"
                        android:textSize="19sp"/>
                    </TableRow>
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_tumbuhan_4"
                        android:textSize="19sp"/>\
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_kayukuning"
                android:orientation="horizontal">
                    <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="366dp"
                    android:layout_height="match_parent"
                    android:text="@string/title_klasifikasi_hewan"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#C9FFFFFF">
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_hewan_1"
                        android:textSize="19sp"/>
                    </TableRow>
                    <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                        <TextView
                        android:padding="4dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/content_hewan_2"
                        android:textSize="19sp"/>
                    </TableRow>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>