<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cirimh.BerkembangBiak"

    android:background="#C9DEFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout

                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="9dip"
                    android:textAlignment="center"
android:fontFamily="@font/alegreya"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="BERKEMBANG BIAK"
                    android:background="@drawable/bgkayu"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:id="@+id/menubar"
                        android:layout_marginRight="0dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_baseline_menu_24"
                        android:onClick="showPopup" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:fontFamily="@font/aileron"
                android:justificationMode="inter_word"
                android:padding="18dip"
                android:text="      Induk ayam melahirkan anak ayam, dari individu berkembang menjadi banyak individu. Itulah yang disebut berkembang biak (reproduksi). Semua makhluk hidup dapat berkembang biak. Perkembangbiakan dapat terjadi secara kawin (seksual / generatif) dan tak kawin (aseksual / vegetatif). Contohnya seekor ayam betina bertelur, telur tersebut dierami dan menetas menjadi anak ayam kemudian tumbuh dan berkembang biak (Gambar 3.12). Serta biji akan berkecambah dan akan tumbuh menjadi pohon (Gambar 3.13). "
                android:textColor="@color/black"
                android:textSize="16sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.zolad.zoominimageview.ZoomInImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/berkembang1"/>

                <com.zolad.zoominimageview.ZoomInImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/berkembang2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron"
                    android:text="Gambar 3.12 : Perkembangbiakan pada hewan (ayam)
Sumber : www.dreamstime.com"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron"
                    android:text="Gambar 3.13 : Perkembangbiakan pada tumbuhan (jagung)
Sumber : keywordbasket.com"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>