<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h10background"
    tools:context=".hal10_menumateri">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/h10judul"/>

                <ImageButton
                    android:id="@+id/menubar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_baseline_menu_24"
                    android:layout_alignParentRight="true"
                    android:onClick="showPopup" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/h10btn1"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="7dp"
                android:id="@+id/btnmateri1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/h10gambar1"
                android:scaleType="fitCenter"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="9dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/h10btn2"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="7dp"
                android:id="@+id/btnmateri2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/h10gambar2"
                android:scaleType="fitCenter"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="9dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/h10btn3"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="7dp"
                android:id="@+id/btnmateri3"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/h10gambar3"
                android:scaleType="fitCenter"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="9dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/h10btn4"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="7dp"
                android:id="@+id/btnmateri4"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/h10gambar4"
                android:scaleType="fitCenter"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="9dp"/>
            


        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>