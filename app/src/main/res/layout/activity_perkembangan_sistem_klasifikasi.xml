<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perkembangansistemklasifikasi.PerkembanganSistemKlasifikasi"
    android:background="@drawable/bg_perkembanganklasifikasi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginEnd="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="PERKEMBANGNGAN SISTEM KLASIFIKASI"
                android:background="@drawable/bg_kuning"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Klasifikasi makhluk hidup menurut Robert H. Whittaker terdiri atas 5 kingdom, sebagai berikut:"
                android:textColor="@color/black"
                android:textSize="19sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_monera"></ImageButton>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_protista"></ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_fungi"></ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_plantae"></ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_animalia"></ImageButton>
            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>