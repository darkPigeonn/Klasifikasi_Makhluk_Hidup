<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hewanberulangbelakang.reptilia">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h74backround">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:padding="20dp"
                android:layout_marginEnd="110dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="KELAS PISCES"
                android:background="@drawable/bg_merah"/>
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
               android:text="Hewan kelas reptilia memiliki ciri-ciri sebagai berikut: tubuhnya terdiri atas kepala, leher, badan dan ekor. Habitat hidupnya di darat dan di air, tubuhnya ditutupi oleh sisik yang tersusun atas zat tanduk, bernapas dengan paru-paru, berkembangbiak dengan cara bertelur. Contohnya buaya (Crocodylus porosus), kura-kura daun (Cyclemys dentata), kadal (Eutropis multifasciata), penyu, ular (Gambar 3.62). "/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/h86gambar"
                android:scaleType="fitXY"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>