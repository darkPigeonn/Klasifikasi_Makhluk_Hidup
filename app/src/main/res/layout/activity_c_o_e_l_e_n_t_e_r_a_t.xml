<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hewantakbertulangbelakang.COELENTERATA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h74backround">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:padding="20dp"
                android:layout_marginEnd="110dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="COELENTERATA"
                android:background="@drawable/bg_kuning"/>
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
               android:text="Coelenterata merupakan hewan berongga, mempunyai tentakel untuk menangkap mangsa. Pada permukaan tentakel terdapat sel beracun yang menyengat. Tubuhnya ada yang berbentuk polip yang menempel pada tempat hidupnya dan ada yang berbentuk medusa yang bergerak aktif melayang-layang di air seperti payung. Contohnya yaitu ubur-ubur (Aurelia aurita), bunga karang (Petrosia lignosa), obelia sp, hydra americana dan anemon (Stichodactyla gigantae) (Gambar  3.58)."/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/h81gambar"
                android:scaleType="fitXY"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"/>

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>