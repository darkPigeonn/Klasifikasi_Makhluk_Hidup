<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#587280"
    tools:context=".klasifikasimh.PengertianKlasifikasiMh">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/white"
                    android:text="PENGERTIAN KLASIFIKASI MAHKLUK HIDUP"
                    android:background="@drawable/bg_merah"/>



            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/h24gambar2"></com.zolad.zoominimageview.ZoomInImageView>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Gambar 3.17 : Buah yang dijual disusun berkelompok berdasarkan jenisnya
Sumber : reference.com"
                android:fontFamily="@font/aileron"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@color/white"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron"
                android:text="  Klasifikasi merupakan suatu cara yang sistematis dalam mempelajari objek (misalnya makhluk hidup) dengan melihat persamaan dan perbedaan ciri makhluk hidup. Ilmu yang mempelajari tentang klasifikasi makhluk hidup disebut taksonomi. Pelopor taksonomi adalah Carolus Linnaeus. "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="10dip"
                android:background="#C9FFFFFF"
                android:justificationMode="inter_word"/>



        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>