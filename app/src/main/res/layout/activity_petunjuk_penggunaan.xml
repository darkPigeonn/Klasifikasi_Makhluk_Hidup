<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetunjukPenggunaan"
    android:background="#009BA2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/judulpetunjukpenggunaan"/>

            <ImageButton
                android:id="@+id/menubar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:layout_alignParentRight="true"
                android:onClick="showPopup" />
        </LinearLayout>

        <ScrollView
            android:layout_below="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
            android:layout_below="@id/atas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_putih"
            android:padding="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nofill"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Petunjuk Aplikasi"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/chewyregular"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persembahan istimewa untuk peserta didik semua.
Supaya kalian mudah dalam mempelajari buku saku android ini dan penggunaannya maksimal. Alangkah baiknya peserta didik memahami petunjuk penggunaan buku saku android terlebih dahulu."
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nofill"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Petunjuk Penggunaan"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/chewyregular"
                android:textSize="20sp"/>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:padding="5dip"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dip"
                    android:text="Penggunaan buku saku android dapat dimulai dari mana saja, namun alangkah baiknya apabila peserta didik runtut dalam mempelajari buku saku android ini."
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:padding="5dip"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dip"
                    android:text="Baca dan cermati terlebih dahulu Kompetensi Inti, Kompetensi Dasar, Indikator Pencapaian Kompetensi."
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:padding="5dip"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dip"
                    android:text="Pahami baik-baik tujuan pembelajaran, isi materi dan latihan soal serta catatlah apabila ada yang belum peserta didik pahami, kemudian tanyakan kepada guru."
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4."
                        android:padding="5dip"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dip"
                        android:text="Kerjakanlah setiap latihan soal dan lihatlah tingkat penguasaan peserta didik."
                        android:justificationMode="inter_word"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5."
                        android:padding="5dip"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dip"
                        android:text="Belajar menggunakan buku saku android ini dapat dilakukan dimanapun dan kapanpun, dan untuk memperkaya materi peserta didik dapat menggunakan referensi lain yang direkomendasikan oleh guru."
                        android:justificationMode="inter_word"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6."
                        android:padding="5dip"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dip"
                        android:text="Berdoalah sebelum dan sesudah belajar. Sesungguhnya kesuksesan dekat dengan diri peserta didik semua, maka wujudkanlah."
                        android:justificationMode="inter_word"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7."
                        android:padding="5dip"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dip"
                        android:text="Berikut ini link (video) cara penggunaan buku saku android:"
                        android:justificationMode="inter_word"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                </TableRow>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELAMAT BELAJAR, SEMOGA SUKSES  "
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/chewyregular"
                    android:textAlignment="center"
                    android:textColor="#FF9204"/>


        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>