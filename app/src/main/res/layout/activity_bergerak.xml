<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cirimh.bergerak"
    android:background="#C9DEFF"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout

                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="9dip"
                    android:textAlignment="center"

                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="BERGERAK"
                    android:background="@drawable/bgkayu"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:id="@+id/menubar"
                        android:layout_marginRight="0dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_baseline_menu_24"
                        android:onClick="showPopup" />
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:fontFamily="@font/aileron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Semua makhluk hidup dapat bergerak baik manusia maupun hewan dapat bergerak dengan alat gerak untuk berpindah tempat (Gambar 3.1). Gerak pada hewan yang berpindah tempat itu disebut dengan lokomosi (locomotion). Sedangkan tumbuhan melakukan pergerakan dengan cara mengikuti arah cahaya matahari (Gambar 3.2)."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="18dip"
                android:justificationMode="inter_word"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.zolad.zoominimageview.ZoomInImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/g1"/>

                <com.zolad.zoominimageview.ZoomInImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/g2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

              <TextView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                  android:fontFamily="@font/aileron"
                    android:text="Gambar 3.1 : Manusia bergerak Sumber : pxhere.com"
                  android:textColor="@color/black"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:textSize="12sp"
                    android:background="@color/white"/>

                <TextView
                   android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron"
                    android:text="@string/gambar_3_2_pergerakan_bagian_tumbuhan_pucuk_yang_mencari_cahaya_matahari_sumber_stevenconnelly_com"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@color/white"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>