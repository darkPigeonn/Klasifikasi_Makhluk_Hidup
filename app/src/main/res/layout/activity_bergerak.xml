<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cirimh.bergerak"
    android:background="#C9DEFF"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:padding="9dip"
                android:textAlignment="center"
                android:layout_marginEnd="140dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="Bergerak"
                android:background="@drawable/bgkayu"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Semua makhluk hidup dapat bergerak baik manusia maupun hewan dapat bergerak dengan alat gerak untuk berpindah tempat (Gambar 3.1). Gerak pada hewan yang berpindah tempat itu disebut dengan lokomosi (locomotion). Sedangkan tumbuhan melakukan pergerakan dengan cara mengikuti arah cahaya matahari (Gambar 3.2)."
                android:textColor="@color/black"
                android:textSize="19sp"
                android:padding="18dip"
                android:justificationMode="inter_word"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/h13gambar"
                android:scaleType="fitXY"
                android:layout_marginVertical="40dp"/>


            </LinearLayout>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>