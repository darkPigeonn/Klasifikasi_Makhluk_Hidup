<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hal2_menuutama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h2_bgmenuutama">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="50dp"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="100dp"
                android:background="@drawable/bgjudull"
                android:text="MENU UTAMA"
                android:fontFamily="@font/alegreya"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="24dp"
                android:padding="29dip"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/btn_petunjukpenggunaan"
                android:layout_width="331dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/petunjuk" />


            <ImageView
                android:id="@+id/btn_kompetensi"
                android:layout_width="331dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/h2_btnkompetensi11" />


            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/btn_konsep"
                android:layout_width="331dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/konsepbtn" />

            <ImageView
                android:id="@+id/btn_materi"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/mteri" />


            <ImageView
                android:id="@+id/btn_latihan"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/latihansoal" />


            <ImageView
                android:id="@+id/btn_daftarpustaka"
                android:layout_width="329dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/dp" />

            <ImageView
                android:id="@+id/btn_informasi"
                android:layout_width="328dp"
                android:layout_height="70dp"
                android:layout_marginStart="11dp"
                android:background="@drawable/informasi" />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>