<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hal2_menuutama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h2_bgmenuutama">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/h2_judulmenuutama"/>

            <ImageView
                android:id="@+id/btn_petunjukpenggunaan"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/h2_btnpetunjukpenggunaan"/>


            <ImageView
                android:id="@+id/btn_kompetensi"
                android:layout_width="331dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/h2_btnkompetensi" />


            <ImageView
                android:id="@+id/btn_konsep"
                android:layout_width="348dp"
                android:layout_height="73dp"
                android:scaleType="fitXY"
                android:src="@drawable/h2_btnkonsep" />

            <ImageView
                android:id="@+id/btn_materi"
                android:layout_width="341dp"
                android:layout_height="72dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/h2_btnmateri" />


            <ImageView
                android:id="@+id/btn_latihan"
                android:layout_width="335dp"
                android:layout_height="68dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/h2_btnlatihansoal" />


            <ImageView
                android:id="@+id/btn_daftarpustaka"
                android:layout_width="337dp"
                android:layout_height="68dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/h2_btndaftarpustaka" />

            <ImageView
                android:id="@+id/btn_informasi"
                android:layout_width="334dp"
                android:layout_height="71dp"
                android:layout_marginStart="11dp"
                android:background="@drawable/h2_btninformasi" />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>