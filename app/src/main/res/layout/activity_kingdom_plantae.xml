<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contoh5kindom.kingdom_plantae"
    android:background="@drawable/bg_plantae">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="140dp"
                android:background="@drawable/bg_kayu_oren"
                android:padding="15dip"
                android:fontFamily="@font/alegreya"
                android:text="KINGDOM PLANTAE"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:justificationMode="inter_word"
                android:padding="18dip"
                android:fontFamily="@font/aileron"
                android:background="#CBFFFFFF"
                android:text="@string/content_plantae"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnbiji"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:text="Tumbuhan biji (Spermatophyta)"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alegreya"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/bg_birulaut"></Button>


                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/btnlumut"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:text="Tumbuhan paku (Pteridophyta)"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/alegreya"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/bg_birulaut"></Button>


                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/btnpaku"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:text="Tumbuhan lumut(Bryophyta)"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/alegreya"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="@drawable/bg_birulaut"></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#FFBD59">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logoyoutube"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/youtube_plan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@string/video_plantae"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>