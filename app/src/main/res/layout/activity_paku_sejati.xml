<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7D0D8"
    tools:context=".contoh5kindom.paku.PakuSejati">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginEnd="140dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:textColor="@color/black"
                android:text="@string/sejatilabel"
                android:background="@drawable/bg_ijo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/aileron"
                android:text="@string/paku_sejati_filicinae_memiliki_ciri_ciri_yaitu_daunnya_berukuran_besar_sporangium_terdapat_pada_sporofil_dan_daun_mudanya_menggulung_sorus_berkumpul_pada_ujung_tepi_dan_tersebar_dipermukaan_daun_contohnya_semanggi_marsilea_crenata_suplir_adiantum_gambar_3_44"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:justificationMode="inter_word"
                android:padding="10dp"/>
            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/sejatigambar"></com.zolad.zoominimageview.ZoomInImageView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron"
                android:text="@string/sejatiteks"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@color/white"/>




        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>