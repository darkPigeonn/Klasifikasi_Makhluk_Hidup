<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hewantakbertulangbelakang.nematoda">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7D0D8">


      <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="300dp"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:textSize="19sp"
                android:text="NEMATODA"
                android:padding="18dip"
                android:textColor="@color/black"
                android:paddingBottom="10dip"
                android:layout_height="70dp"
                android:background="@drawable/kayucoklat"/>

            <TextView
                android:layout_marginTop="30dp"
                android:padding="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:fontFamily="@font/aileron"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Ciri-ciri dari hewan nematoda yaitu berbentuk bulat panjang atau mirip dengan benang, hewan tripoblastik dan pseudoselomata (berongga tubuh semu), hidup bebas dengan memakan sampah organik, hidup parasit dihewan, manusia dan tumbuhan. Habitat hidupnya di air tawar, air laut, air payau serta di tanah. Contohnya yaitu: cacing perut (Ascaris lumbricoides), cacing kremi (Enterobius vermicularis) dan cacing tambang (Ancylostoma duodenale) (Gambar 3.55). "/>

            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/anegambar"></com.zolad.zoominimageview.ZoomInImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron"
                android:text="@string/nemateks"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>