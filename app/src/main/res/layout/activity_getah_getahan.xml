<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7D0D8"
    tools:context=".contoh5kindom.dikotil.GetahGetahan">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="252dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:padding="10dip"
                android:text="SUKU GETAH-GETAHAN (EUPHORBIACEAE)"
                android:background="@drawable/bg_merahmuda"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/aileron"
                android:textColor="@color/black"
                android:text="Suku getah-getahan (Euphorbiaceae), memiliki ciri-ciri tulang daun menjari, umumnya mempunyai buah kotak dan apabila dilukai bagian tubuhnya akan mengeluarkan getah berwarna putih. Contohnya: karet (Hevea brasiliensis), ketela pohon (Manihot esculenta), jarak (Ricinus communis L.) (Gambar 3.39)."
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:padding="10dp"/>
            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/getahgambar"></com.zolad.zoominimageview.ZoomInImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron"
                android:text="Gambar 3.39 : Karet
Sumber : avtorem96.ru"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@color/white"/>



        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>