<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradien"
    tools:context=".contoh5kindom.Protozoa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h38backround">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginEnd="110dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="PROTISTA MIRIP HEWAN
(PROTOZOA)"
            android:background="@drawable/bg_kuning"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Berdasarkan alat geraknya, protozoa dibagi menjadi 4, yaitu:
-Hewan berkaki semu (Rhizopoda), bergerak dengan kaki semu (Pseudopodia). Contohnya Amoeba proteus, Entamoeba coli (Gambar 3.21)."/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="130dp"
            android:src="@drawable/h38gambaer1"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="-Hewan berbulu cambuk (Flagellata), bergerak dengan bulu cambuk (Glagela). Contohnya: Euglena viridis, Trypanosoma gambiense (Gambar 3.22). "/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="130dp"
            android:src="@drawable/h38gambar2"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="-Hewan berbulu getar (Ciliata), bergerak dengan bulu getar (Silia). Contohnya: Paramecium sp dan Coleps (Gambar 3.23)."/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="130dp"
            android:src="@drawable/h38gamabar3"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="-Hewan berspora (Sporozoa), tidak memiliki alat gerak, berkembangbiak dengan membentuk spora. Contohnya: Plasmodium sp (Gambar 3.24)"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="130dp"
            android:src="@drawable/h38gambaer1"
            android:scaleType="fitXY"/>

    </LinearLayout>

    </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>