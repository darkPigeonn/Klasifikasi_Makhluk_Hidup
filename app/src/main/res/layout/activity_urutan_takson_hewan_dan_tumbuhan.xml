<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#587280"
    tools:context=".klasifikasimh.UrutanTaksonHewanDanTumbuhan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/white"
                    android:text="URUTAN TAKSON HEWAN DAN TUMBUHAN"
                    android:background="@drawable/bg_merah"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:id="@+id/menubar"
                        android:layout_marginRight="0dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_baseline_menu_24"
                        android:onClick="showPopup" />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="@string/title_tumbuhan"
                        android:fontFamily="@font/alegreya"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_kayu_kuning"
                        android:textAlignment="center">
                    </TextView>


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="@string/title_hewan"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_kayu_merah"
                        android:textAlignment="center">
                    </TextView>

            </LinearLayout>

            <ImageView
               android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:background="@drawable/gbr_takson_hwn_tumb">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#FFBD59">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logoyoutube"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/idyoutube1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Video klasifikasi makhluk hidup"
                android:textColor="@color/black" />

        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>