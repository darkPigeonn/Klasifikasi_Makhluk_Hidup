<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contoh5kindom.kingdom_protista"
    android:background="@drawable/bg_protis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:id="@+id/menubar"
                        android:layout_marginRight="0dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_baseline_menu_24"
                        android:onClick="showPopup" />
         </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginEnd="140dp"
                android:background="@drawable/bg_kayu_oren"
                android:padding="13dip"
                android:fontFamily="@font/alegreya"
                android:text="KINGDOM PROTISTA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:justificationMode="inter_word"
                android:padding="10dip"
                android:background="#C8FFFFFF"
                android:text="@string/content_protista"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/protozoa"
                    android:layout_width="276dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="60dp"
                    android:text="PROTISTA MIRIP HEWAN (PROTOZOA)"
                    android:textSize="20sp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_kuning2q"></Button>

                <Button
                    android:id="@+id/alga"
                    android:layout_width="276dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="PROTISTA MIRIP TUMBUHAN (ALGA/GANGGANG)"
                    android:background="@drawable/bg_kuning2q">
                </Button>

                <Button
                    android:id="@+id/protistajamur"
                    android:layout_width="276dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya"
                    android:textSize="20sp"
                    android:text="PROTISTA MIRIP JAMUR"
                    android:background="@drawable/bg_kuning2q">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#FFBD59">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logoyoutube"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/youtube_protista"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/video_protista"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>