<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contoh5kindom.kingdom_plantae"
    android:background="@drawable/bg_lumut">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/btnbiji"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="TUMBUHAN BIJI (SPERMATOPHYTA)"
                android:fontFamily="@font/alegreya"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/bg_birulaut"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="18dip"
                android:background="#C9FFFFFF"
                android:fontFamily="@font/aileron"
                android:text="@string/content_lumut"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btndaun"
                    android:layout_width="276dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textSize="19sp"
                    android:text="@string/labeldaun"
                    android:textColor="@color/white"
                    android:paddingBottom="10dip"
                    android:layout_height="100dp"
                    android:background="@drawable/bgijoijo"></Button>


                <Button
                    android:id="@+id/btnhati"
                    android:layout_width="276dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textSize="19sp"
                    android:text="@string/labelhati"
                    android:textColor="@color/white"
                    android:paddingBottom="10dip"
                    android:layout_height="100dp"
                    android:background="@drawable/bgijoijo"></Button>


                <Button
                    android:id="@+id/btntanduk"
                    android:layout_width="276dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya"
                    android:textSize="19sp"
                    android:text="LUMUT TANDUK (ANTHOCEROTOPHYTA)"
                    android:textColor="@color/white"
                    android:paddingBottom="10dip"
                    android:layout_height="100dp"
                    android:background="@drawable/bgijoijo"></Button>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>