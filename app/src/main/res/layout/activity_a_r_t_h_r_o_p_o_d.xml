<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7D0D8"
    tools:context=".hewantakbertulangbelakang.arthropoda">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


      <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <Button
              android:id="@+id/btn_pengantar"
              android:layout_width="200dp"
              android:layout_height="60dp"
              android:background="@color/black"

              android:textSize="20sp"
              android:textStyle="bold" />


            <ImageButton
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="300dp"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:textSize="19sp"
                android:text="@string/arthropoda"
                android:padding="18dip"
                android:textColor="@color/black"
                android:paddingBottom="10dip"
                android:layout_height="70dp"
                android:background="@drawable/kayucoklat"/>

            <TextView
                android:layout_marginTop="10dp"
                android:padding="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:fontFamily="@font/aileron"
                android:textColor="@color/black"
                android:text="@string/isiartho"/>

            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/arthogambar"></com.zolad.zoominimageview.ZoomInImageView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron"
                android:text="@string/artoteks"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>