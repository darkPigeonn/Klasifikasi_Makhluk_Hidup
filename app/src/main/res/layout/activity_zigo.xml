<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradien"
    tools:context=".contoh5kindom.Zigo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/menubar"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="showPopup" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginEnd="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="ZIGOMYCOTINA"
                android:background="@drawable/bg_coklat"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="430dp"
                        android:textSize="19sp"
                        android:textColor="@color/white"
                        android:text="Zigomycotina memiliki ciri-ciri yaitu: hidup di tempat-tempat lembap, membentuk spora istirahat berdinding tebal yang disebut zigospora, mempunyai hifa bercabang-cabang dan tidak bersekat (soenositik) dengan dinding sel tersusun atas zat kitin. Ada tiga tipe hifa Zigomicotina, yaitu stolon yaitu hifa yang membentuk jaringan pada permukaan substrat dan menghubungkan dua kumpulan sporangium. Rizoid yaitu hifa yang menembus substrat untuk menyerap makanan, sporangiofor yaitu hifa yang tumbuh tegak pada permukaan substrat dan memiliki sporangia globuler (berbentuk bulat) di ujung-ujungnya. Berkembangbiak dengan zigospora. Contohnya jamur tempe (Rhizopus oryzae)  (Gambar 3.31)."
                        android:layout_marginTop="10dp"
                        android:justificationMode="inter_word"
                        android:padding="10dp"/>
                    <com.zolad.zoominimageview.ZoomInImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/zigogambar"
                        android:scaleType="fitXY"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aileron"
                        android:text="Gambar 3.31 : Rhizopus oryzae
Sumber : keywordsbasket.com"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@color/white"/>

                </LinearLayout>
            </ScrollView>




        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>